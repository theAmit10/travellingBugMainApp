<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/searchHistoryContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"

            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view3"
            app:srcCompat="@drawable/ic_time" />

        <LinearLayout
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/searchHistoryAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A-18 Info Tech Park sector 34 Gurugarm , Haryana Rishikesh bus Stand, Rishikesh"
                android:textColor="@color/black"
                android:maxLines="3"
                android:textSize="@dimen/_11ssp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@+id/view3"
                tools:layout_editor_absoluteX="200dp" />

            <TextView
                android:id="@+id/searchHistoryPassenger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1- passanger"
                android:maxLines="1"
                android:textColor="@color/colorDarkGray"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@+id/view3"
                tools:layout_editor_absoluteX="200dp" />



        </LinearLayout>



        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view3"
            app:srcCompat="@drawable/ic_forward" />



    </LinearLayout>



</LinearLayout>