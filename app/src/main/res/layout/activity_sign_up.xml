<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_135sdp"
            android:layout_centerVertical="true"
            android:background="@drawable/middle_boxmirror"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="@dimen/_230sdp"
                android:layout_height="@dimen/_130sdp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:gravity="center|start"
                android:orientation="vertical">

                <com.travel.travellingbug.utills.MyEditText
                    android:id="@+id/etNames"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_42sdp"
                    android:background="@color/white"
                    android:backgroundTint="@color/transparent"
                    android:drawableStart="@drawable/ic_user_name"
                    android:drawablePadding="@dimen/_10sdp"
                    android:hint="@string/name"
                    android:inputType="textEmailAddress"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/_14sdp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_grey_bg_" />


                <com.travel.travellingbug.utills.MyEditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_42sdp"
                    android:background="@color/white"
                    android:backgroundTint="@color/transparent"
                    android:drawableStart="@drawable/ic_password"
                    android:drawablePadding="@dimen/_10sdp"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/_14sdp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_grey_bg_" />


                <com.travel.travellingbug.utills.MyEditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_42sdp"
                    android:background="@color/white"
                    android:backgroundTint="@color/transparent"
                    android:drawableStart="@drawable/ic_mail"
                    android:drawablePadding="@dimen/_10sdp"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/_14sdp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/btnSignUps"
                android:layout_width="@dimen/_58sdp"
                android:layout_height="@dimen/_58sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/round_shape"
                android:padding="@dimen/_20sdp"
                android:rotation="@integer/angle_rtl_180"
                android:src="@drawable/right_arrow_new"
                android:textColor="@color/white" />


        </RelativeLayout>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/button2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_8sdp"

            android:src="@drawable/ic_launcher_web" />

        <com.travel.travellingbug.utills.MyBoldTextView
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_16sdp"
            android:gravity="center"
            android:text="@string/registration"
            android:textColor="@color/black"
            android:textSize="@dimen/_18sdp" />

        <LinearLayout
            android:layout_width="@dimen/_170sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/_40sdp"
            android:background="@drawable/box_login"
            android:gravity="end">

            <TextView
                android:id="@+id/txtSignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="@string/login"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_21sdp" />
        </LinearLayout>

    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/btnSignUp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250sdp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/intro_four" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="-10dp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:fontFamily="@font/nunito_bold"
                android:gravity="center"
                android:text="Welcome to Travelling Bug"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:fontFamily="@font/nunito_bold"
                android:gravity="center"
                android:text="Make your travel better with us "
                android:textColor="@color/colorDarkGray"
                android:textSize="@dimen/_11sdp" />

            <LinearLayout
                android:id="@+id/ll_mobileLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center"
                android:orientation="horizontal">


                <FrameLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.hbb20.CountryCodePicker
                        android:id="@+id/ccp"
                        android:layout_width="@dimen/_68sdp"
                        android:layout_height="wrap_content"
                        app:ccp_contentColor="@color/black"
                        app:ccp_flagBorderColor="@color/colorDarkGray"
                        app:ccp_defaultNameCode="eg"
                        app:ccp_defaultLanguage="ENGLISH"
                        app:ccpDialog_searchEditTextTint="@color/colorDarkGray"
                        app:ccp_showFlag="true"
                        app:ccp_defaultPhoneCode="91"
                        app:ccp_autoDetectCountry="true"
                        app:ccp_showNameCode="false"
                        app:ccp_showPhoneCode="true"
                        app:ccp_textSize="@dimen/_10sdp" />
                </FrameLayout>


                <EditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:background="@drawable/auth_btn_white_bg"
                    android:hint="Enter your number"

                    android:inputType="phone|textNoSuggestions"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/colorDarkGray"
                    android:textColorHint="@color/colorDarkGray"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@color/colorLightGray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:backgroundTint="@color/colorDarkGray"
                    android:padding="@dimen/_10sdp"
                    android:text="OR CONTINUE WITH"
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="@dimen/_11sdp" />

                <View
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@color/colorLightGray" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnGoogle"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/auth_btn_white_bg"
                    android:drawableLeft="@drawable/icon_google"
                    android:elevation="@dimen/_10sdp"

                    android:paddingStart="@dimen/_10sdp"
                    android:text="Google"
                    android:textAllCaps="false"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="@dimen/_12sdp" />

                <Button
                    android:id="@+id/btnFb"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:drawableLeft="@drawable/ic_fb"
                    android:background="@drawable/auth_btn_blue_bg"
                    android:elevation="@dimen/_10sdp"

                    android:paddingStart="@dimen/_10sdp"
                    android:text="Facebook"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/registerLayout"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_65sdp"
                android:layout_below="@+id/viewLoginLayout"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_65sdp"
                android:background="@drawable/box_registrationmirror"

                android:visibility="gone">

                <com.travel.travellingbug.utills.MyBoldTextView
                    android:id="@+id/txtSignUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/resgist"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_15sdp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/_8sdp">

                    <TextView
                        android:id="@+id/logo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:gravity="center"
                        android:text="@string/driver"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_24sdp" />

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_below="@+id/logo"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:src="@drawable/ic_launcher_web" />

                    <LinearLayout
                        android:id="@+id/viewLoginLayout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_96sdp"
                        android:layout_centerVertical="true"

                        android:background="@drawable/middle_boxmirror"
                        android:orientation="vertical">


                        <View
                            android:layout_width="@dimen/_230sdp"
                            android:layout_height="@dimen/_1sdp"
                            android:background="#f2f2f2" />


                    </LinearLayout>


                    <!--                <ImageView-->
                    <!--                    android:id="@+id/btnLogin"-->
                    <!--                    android:layout_width="@dimen/_48sdp"-->
                    <!--                    android:layout_height="@dimen/_48sdp"-->
                    <!--                    android:layout_alignParentEnd="true"-->
                    <!--                    android:layout_centerInParent="true"-->
                    <!--                    android:background="@drawable/round_shape"-->
                    <!--                    android:padding="@dimen/_14sdp"-->
                    <!--                    android:rotation="@integer/angle_rtl_180"-->
                    <!--                    android:src="@drawable/right_arrow_new"-->
                    <!--                    android:textColor="@color/white" />-->


                    <com.travel.travellingbug.utills.MyTextView
                        android:id="@+id/txtForget"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/viewLoginLayout"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:layout_marginEnd="21dp"
                        android:gravity="center"

                        android:text="@string/i_forgot_my_password"
                        android:textSize="@dimen/_14sdp" />


                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>


        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/auth_btn_green_bg"
            android:fontFamily="@font/nunito_bold"
            android:text="Continue"

            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/linearLayout" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>