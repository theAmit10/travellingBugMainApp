<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activities.FindRidesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_10sdp"
            android:padding="@dimen/_7sdp"
            android:src="@drawable/back_white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="-30dp"
            android:gravity="center"
            android:text="FIND A RIDE"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_margin="@dimen/_5sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp">


        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_15sdp"
            app:srcCompat="@drawable/up_down" />

        <LinearLayout
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/from"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:maxLines="1"
                android:fontFamily="@font/nunito_regular"
                android:textStyle="bold"
                android:text=""
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/_9sdp" />

            <TextView
                android:id="@+id/destination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/nunito_regular"

                android:textStyle="bold"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/_9sdp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:drawableLeft="@drawable/calendar_clock"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableTint="@color/dark_gray"
                android:fontFamily="@font/nunito_regular"

                android:textStyle="bold"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/_9sdp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:drawableLeft="@drawable/ic_time"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableTint="@color/dark_gray"
                android:fontFamily="@font/nunito_regular"
                android:textStyle="bold"
                android:maxLines="1"
                android:text="11:30 PM"
                android:visibility="gone"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/_9sdp" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorGray" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedSv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:visibility="gone"
                    android:id="@+id/findRideRequestRv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>
            </RelativeLayout>

            <ProgressBar
                android:visibility="gone"
                android:id="@+id/idPBLoading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmerLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="MissingConstraints">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--add  several shimmer placeholder layout -->

                    <include layout="@layout/shimmer_placeholder_layout"></include>
                    <include layout="@layout/shimmer_placeholder_layout"></include>
                    <include layout="@layout/shimmer_placeholder_layout"></include>
                    <include layout="@layout/shimmer_placeholder_layout"></include>
                    <include layout="@layout/shimmer_placeholder_layout"></include>
                    <include layout="@layout/shimmer_placeholder_layout"></include>
                    <include layout="@layout/shimmer_placeholder_layout"></include>

                </LinearLayout>
            </com.facebook.shimmer.ShimmerFrameLayout>


            <LinearLayout

                android:id="@+id/errorLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_5sdp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:visibility="gone"
                android:padding="@dimen/_5sdp">


                <RelativeLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/error_image"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_184sdp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginEnd="@dimen/_20sdp"
                            android:background="@drawable/no_data_found"
                            android:scaleType="centerCrop" />

                        <com.travel.travellingbug.utills.MyBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:gravity="center"
                            android:paddingStart="@dimen/_10sdp"
                            android:paddingEnd="@dimen/_10sdp"
                            android:text="No Rides Found"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_16sdp"
                            android:textStyle="bold" />


                        <com.travel.travellingbug.utills.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/error_image"
                            android:gravity="center"
                            android:layout_marginTop="20dp"
                            android:text="Currently, no driver available try after sometime. "
                            android:textColor="@color/colorDarkGray"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>