                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_bold"
                            android:text=""
                            android:textColor="@color/green"
                            android:textSize="@dimen/_11ssp"
                            android:textStyle="bold" />

                    </LinearLayout>


                </LinearLayout>

                <View
